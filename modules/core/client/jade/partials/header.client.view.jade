md-toolbar.justify-center(ng-controller='HeaderController as vm')

  .max-width-5.mx-auto.sm-flex.width-100.items-center(ng-if='!vm.authentication.user')
    a#logo(ui-sref='home').block.center.py2.sm-py0
      img.fit.relative(src="https://s3-us-west-2.amazonaws.com/clearmysnow/front/brand/logo300-w.png" style='top: 3px;')
    .flex-auto
    nav.sm-flex.center
      md-button.px1.py2.sm-px3.m0(ui-sref-active='"bg-darken-1"' ui-sref="service") Service
      md-button.px1.py2.sm-px3.m0(ui-sref-active='"bg-darken-1"' ui-sref="info") Information
      md-button.px1.py2.sm-px3.m0(ui-sref-active='"bg-darken-1"' ui-sref="contact") Contact
      
  .flex.width-100.items-center(ng-if='vm.authentication.user')
    md-menu(md-position-mode='right target', md-offset='0 0', style='margin-right: 0')
      md-button.md-icon-button(ng-click='vm.openMenu($mdOpenMenu, $event)')
        md-icon(md-menu-origin='right') lock_outline
      md-menu-content(width='4')
        md-menu-item
          md-button(ng-click='vm.signout()')
            .flex
              p.flex-auto Sign out
              md-icon exit_to_app
