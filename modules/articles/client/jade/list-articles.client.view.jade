section
  .page-header
    h1 Articles
  .list-group
    a.list-group-item(ng-repeat='article in vm.articles', ui-sref='articles.view({ articleId: article._id })')
      small.list-group-item-text
        | Posted on
        span(ng-bind="article.created | date:'mediumDate'")
        | by
        span(ng-if='article.user', ng-bind='article.user.displayName')
        span(ng-if='!article.user') Deleted User
      h4.list-group-item-heading(ng-bind='article.title')
      p.list-group-item-text(ng-bind='article.content')
