section
  .page-header
    h1 {{vm.article._id ? 'Edit Article' : 'New Article'}}
  .pull-right
    a.btn.btn-primary(ng-show='vm.article._id', ng-click='vm.remove()')
      i.glyphicon.glyphicon-trash
  .col-md-12
    form.form-horizontal(name='vm.form.articleForm', ng-submit='vm.save(vm.form.articleForm.$valid)', novalidate='')
      fieldset
        .form-group(show-errors='')
          label.control-label(for='title') Title
          input#title.form-control(name='title', type='text', ng-model='vm.article.title', placeholder='Title', required='')
          div(ng-messages='vm.form.articleForm.title.$error', role='alert')
            p.help-block.error-text(ng-message='required') Article title is required.
        .form-group
          label.control-label(for='content') Content
          textarea#content.form-control(name='content', data-ng-model='vm.article.content', cols='30', rows='10', placeholder='Content')
        .form-group
          button.btn.btn-default(type='submit') {{vm.article._id ? 'Update' : 'Create'}}
